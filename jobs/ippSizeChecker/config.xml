    <hudson.tasks.Shell>
      <command>artifactory_host=artifactory
needToSendEmail=&quot;False&quot;
# Downgrade NEWTAG by 1 to compare two newest size_report csv
OLDTAG=$NEWTAG
[[ &quot;$OLDTAG&quot; =~ (.*[^0-9])([0-9]+)$ ]] &amp;&amp; OLDTAG=&quot;${BASH_REMATCH[1]}$((${BASH_REMATCH[2]} - 1))&quot;;

#get all childs names from the spesific TAG
allChilds=$(cat boards2compile.yml | sed s/.*AUTOPRD=// | cut -d&quot; &quot; -f1 | cut -d&quot;&amp;&quot; -f1)
allChilds=($(allChilds))
allChildsLength=${#a[@]}
for i in `seq 2 $(($allChildsLength-1))`
do
	#get the Current build NEW CSV REPORT
	curl -k --insecure -u $ArtifactoryUser:$ArtifactoryApiKey -O &quot;https://$artifactory_host/ipp-release/com/ac/ipp/SFB/${BUILD_BRANCH}/${NEWTAG}/${allChilds[i]}/${NEWTAG}_size_report.csv&quot;
	#get the OLDER CSV REPORT (NEWTAG -1)
	curl -k --insecure -u $ArtifactoryUser:$ArtifactoryApiKey -O &quot;https://$artifactory_host/ipp-release/com/ac/ipp/SFB/${BUILD_BRANCH}/${OLDTAG}/${allChilds[i]}/${OLDTAG}_size_report.csv&quot;
	# run comparison between the old csv to the new csv
	sh scripts/mtds_size.sh size_diff ${OLDTAG}_size_report.csv ${NEWTAG}_size_report.csv
	RetunedValue=$?
	#return 0 if the script succeseded else if failed
	if [[ $ReturnedValue == &quot;0&quot; ]]
	then
		echo &quot;for ${allChilds[i]} img size test passed&quot;
	else
		needToSendEmail=&quot;True&quot;
	fi
    
done    
echo &quot;needToSendEmail=$needToSendEmail&quot; &gt; properties
echo &quot;OLDTAG=$OLDTAG&quot; &gt;&gt; properties


#Arik.Kabessa,Nirit.Beglaubter,Oriel.Krispin,Oleg.Friedman,Kenny.Xuan,Jonatan.Reberger</command>
