#if [ `git tag -l $IPP_VER` ]; then git tag -d $IPP_VER; fi
#echo IPP_VER=${IPP_VER} &gt;&gt; generated_ipp_version.properties
</command>
    </hudson.tasks.Shell>
    <EnvInjectBuilder plugin="envinject@1.92.1">
